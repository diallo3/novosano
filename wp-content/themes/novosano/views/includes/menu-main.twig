{# menu main #}
{% if pri %}
	<menu id="mainMenu" class="c-menu c-menu--main u-float-right">
	{% for item in pri.get_items %}
		<li class="c-menu__item {{item.classes | join(' ')}}">
			<a href="{{item.get_path}}" class="c-menu__link">{{item.title}}</a>
			{% if item.get_children %}
				<ul class="c-menu--children">
					{% for child in item.get_children %}
					<li class="c-menu__s-item"><a href="{{child.get_children}}" class="c-menu__sub-link">{{child.title}}</a></li>
					{% endfor %}
				</ul>
			{% endif %}
		</li>
	{% endfor %}
	{% if options.schedule %}
		<li class="c-menu__schedule">
			<a href="" class="o-cta o-cta--nav">Schedule Today</a>
		</li>
	{% endif %}
	</menu>
{% endif %}